<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CuadreCajaActivity">

    <TextView
        android:id="@+id/txtVNomBano"
        android:layout_width="240dp"
        android:layout_height="37dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/border_edit_text"
        android:ems="10"
        android:imeOptions="actionNone"
        android:inputType="text"
        android:maxLines="1"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/txtVBano"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtVBano"
        android:layout_width="90dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="BaÃ±o"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtVUsuario"
        android:layout_width="90dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Usuario"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtVBano" />

    <TextView
        android:id="@+id/txtVNomUsuario"
        android:layout_width="190dp"
        android:layout_height="37dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_edit_text"
        android:ems="10"
        android:imeOptions="actionNone"
        android:inputType="text"
        android:maxLines="1"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/txtVUsuario"
        app:layout_constraintTop_toBottomOf="@+id/txtVNomBano" />

    <ListView
        android:id="@+id/listVDetalle"
        android:layout_width="345dp"
        android:layout_height="440dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtVNomUsuario">

    </ListView>

    <TextView
        android:id="@+id/txtVTotal"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Total Caja "
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listVDetalle" />

    <TextView
        android:id="@+id/txtVotalCaja"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_edit_text"
        android:ems="10"
        android:imeOptions="actionNone"
        android:inputType="text"
        android:maxLines="1"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/txtVTotal"
        app:layout_constraintTop_toBottomOf="@+id/listVDetalle" />

    <Button
        android:id="@+id/btnImpCuadre"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/printer"
        android:enabled="false"
        app:layout_constraintStart_toEndOf="@+id/txtVNomUsuario"
        app:layout_constraintTop_toBottomOf="@+id/txtVNomBano" />

</android.support.constraint.ConstraintLayout>